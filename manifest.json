{
  "manifest_version": 2,

  "name": "OnTrack",
  "description": "We help students study.",
  "version": "1.0.0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "icon48.png"
  },
  "background": {
    "scripts": ["popup.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "notifications",
    "alarms",
    "storage"
  ]
}
